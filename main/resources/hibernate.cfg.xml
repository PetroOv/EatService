        <mapping class="com.project.businesslogic.users.User"/>
        <mapping class="com.project.businesslogic.users.SimpleUser"/>
        <mapping class="com.project.businesslogic.users.ManagerUser"/>
        <mapping class="com.project.businesslogic.Dish"/>
